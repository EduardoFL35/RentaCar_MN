@model FrontEnd.Models.AutomovileViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Editar Automóvil</h3>
        </div>
        <div class="card-body">

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(Model=>Model.Id)
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Marca" class="control-label"></label>
                        <input asp-for="Marca" class="form-control" />
                        <span asp-validation-for="Marca" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Modelo" class="control-label"></label>
                        <input asp-for="Modelo" class="form-control" />
                        <span asp-validation-for="Modelo" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Anio" class="control-label"></label>
                        <input asp-for="Anio" class="form-control" />
                        <span asp-validation-for="Anio" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Placa" class="control-label"></label>
                        <input asp-for="Placa" class="form-control" />
                        <span asp-validation-for="Placa" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Disponibilidad" class="control-label"></label>
                        <input asp-for="Disponibilidad" class="form-control" />
                        <span asp-validation-for="Disponibilidad" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Precio" class="control-label"></label>
                        <input asp-for="Precio" class="form-control" />
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="FechaActualizado" class="control-label"></label>
                        <input asp-for="FechaActualizado" class="form-control" />
                        <span asp-validation-for="FechaActualizado" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="IdCategorias" class="control-label"></label>
                        <input asp-for="IdCategorias" class="form-control" />
                        <span asp-validation-for="IdCategorias" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="IdDeSedes" class="control-label"></label>
                        <input asp-for="IdDeSedes" class="form-control" />
                        <span asp-validation-for="IdDeSedes" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="IdSeguros" class="control-label"></label>
                        <input asp-for="IdSeguros" class="form-control" />
                        <span asp-validation-for="IdSeguros" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-footer">
                    <div class="text-end">
                        <div class="d-flex">
                            <a asp-action="Index" class="btn btn-danger m-2">Cancelar</a>
                            <input type="submit" value="Save" style="color: #ffffff; background-color: #001F3F;" class="btn m-2" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
