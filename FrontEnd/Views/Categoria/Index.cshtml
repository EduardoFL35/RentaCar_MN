@model IEnumerable<FrontEnd.Models.CategoriaViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="page-header">
    <div class="container-xl">
        <div class="row g-2 align-items-center">
            <div class="col">
                <!-- Page pre-title -->
                <h2 class="page-title">
                    Listado de Categorías
                </h2>
            </div>
            <!-- Page title actions -->
            <div class="col-12 col-md-auto ms-auto d-print-none">
                <div class="btn-list">
                    <a asp-action="Create" class="btn btn-danger">Nueva Categoría</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="page-body">
    <div class="container-xl">
        <div class="row row-deck row-cards">
            <div class="col-12">
                <div class="card">
                    <div class="table-responsive min-vh-100">
                        <table class="table card-table table-vcenter text-nowrap datatable">
                            <thead class="table-secondary ">
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Id)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.DescripcionCategoria)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Licencia)
                                    </th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DescripcionCategoria)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Licencia)
                                        </td>
                                        <td>
                                            @Html.ActionLink("Edit", "Edit", new {  id=item.Id  }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("Details", "Details", new {  id=item.Id  }, new { @class = "btn btn-primary" })
                                            @Html.ActionLink("Delete", "Delete", new {  id=item.Id  }, new { @class = "btn btn-primary" })
                                        </td>
                                    </tr>
                                }
                            </tbody>

                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>