@model FrontEnd.Models.EmpleadoViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-body">
            <h1 class="card-title">Seguro que quieres eliminar esto?</h1>

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Automóvil</h4>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Id)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Id)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Nombre)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.Apellido)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.FechaContratacion)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.FechaContratacion)
                        </dd>
                        <dt class="col-sm-2">
                            @Html.DisplayNameFor(model => model.IdSede)
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.IdSede)
                        </dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Delete" class="mt-4">
                @Html.HiddenFor(Model=>Model.Id)
                <button type="submit" value="Delete" class="btn btn-danger">Delete</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
            </form>
        </div>
    </div>
</div>















