@model FrontEnd.Models.TransaccioneViewModel

@{
    ViewData["Title"] = "Create";
}
<div class="container my-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Registro de Transacción</h3>
        </div>
        <div class="card-body">

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Id" class="control-label"></label>
                        <input asp-for="Id" class="form-control" />
                        <span asp-validation-for="Id" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="FechaInicio" class="control-label"></label>
                        <input asp-for="FechaInicio" class="form-control" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="FechaDevolucion" class="control-label"></label>
                        <input asp-for="FechaDevolucion" class="form-control" />
                        <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="CostoTotal" class="control-label"></label>
                        <input asp-for="CostoTotal" class="form-control" />
                        <span asp-validation-for="CostoTotal" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="Detalles" class="control-label"></label>
                        <input asp-for="Detalles" class="form-control" />
                        <span asp-validation-for="Detalles" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="ShipmentDate" class="control-label"></label>
                        <input asp-for="ShipmentDate" class="form-control" />
                        <span asp-validation-for="ShipmentDate" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="IdAutomovil" class="control-label"></label>
                        <input asp-for="IdAutomovil" class="form-control" />
                        <span asp-validation-for="IdAutomovil" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="IdCliente" class="control-label"></label>
                        <input asp-for="IdCliente" class="form-control" />
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="IdEmpleado" class="control-label"></label>
                        <input asp-for="IdEmpleado" class="form-control" />
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                </div>
                <br>
                <div class="form-footer">
                    <div class="text-end">
                        <div class="d-flex">
                            <a asp-action="Index" class="btn btn-danger m-2">Cancelar</a>
                            <input type="submit" value="Create" style="color: #ffffff; background-color: #001F3F;" class="btn m-2" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
