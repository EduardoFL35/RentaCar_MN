@model FrontEnd.Models.TransaccioneViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container my-4">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Editar Transacción</h3>
        </div>
        <div class="card-body">

            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                @Html.HiddenFor(model => model.Id)

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
                        <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
                        <span asp-validation-for="FechaInicio" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="FechaDevolucion" class="control-label">Fecha de Devolución</label>
                        <input asp-for="FechaDevolucion" class="form-control" type="datetime-local" />
                        <span asp-validation-for="FechaDevolucion" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="CostoTotal" class="control-label">Costo Total</label>
                        <input asp-for="CostoTotal" class="form-control" />
                        <span asp-validation-for="CostoTotal" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="Detalles" class="control-label">Detalles</label>
                        <input asp-for="Detalles" class="form-control" />
                        <span asp-validation-for="Detalles" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="ShipmentDate" class="control-label">Fecha de Envío</label>
                        <input asp-for="ShipmentDate" class="form-control" type="datetime-local" />
                        <span asp-validation-for="ShipmentDate" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="IdAutomovil" class="control-label">ID del Automóvil</label>
                        <input asp-for="IdAutomovil" class="form-control" />
                        <span asp-validation-for="IdAutomovil" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-6">
                        <label asp-for="IdCliente" class="control-label">ID del Cliente</label>
                        <input asp-for="IdCliente" class="form-control" />
                        <span asp-validation-for="IdCliente" class="text-danger"></span>
                    </div>

                    <div class="col-sm-6">
                        <label asp-for="IdEmpleado" class="control-label">ID del Empleado</label>
                        <input asp-for="IdEmpleado" class="form-control" />
                        <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-footer">
                    <div class="text-end">
                        <div class="d-flex">
                            <a asp-action="Index" class="btn btn-danger m-2">Cancelar</a>
                            <input type="submit" value="Guardar" style="color: #ffffff; background-color: #001F3F;" class="btn m-2" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
